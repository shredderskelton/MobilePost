<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="home_button_menu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/button_menu</item>
        <item name="android:contentDescription">Menu button</item>
    </style>

    <style name="home_button_menu_overlay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="home_button_menu_details">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="info_exercise_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">#E6DEC7</item>
    </style>

</resources>